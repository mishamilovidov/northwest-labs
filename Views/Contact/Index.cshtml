@model NorthwestLabsPrep.Models.Contact

@{
    ViewData["Title"] = "Contact";
}

<div class="jumbotron">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="contact" asp-action="MessageSent" method="post" class="form-horizontal" role="form">
        <div class="form-group row">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <b><span asp-validation-for="Name" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <b><span asp-validation-for="Email" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Subject" class="control-label"></label>
                        <input asp-for="Subject" class="form-control" />
                        <b><span asp-validation-for="Subject" class="text-danger"></span></b>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Message" class="control-label"></label>
                        <textarea asp-for="Message" class="form-control" rows="6"></textarea>
                        <b><span asp-validation-for="Message" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="submit" value="Send Message" id="validate" class="btn btn-primary pull-right" />
                    </div>
                </div>
            </div>
        </div>
    </form>

</div>

