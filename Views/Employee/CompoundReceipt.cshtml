@{
    ViewData["Title"] = "Compound Receipt - Listeraninanine";
}


<div class="jumbotron">
    <div class="row">
        <div class="col-md-9">
            <ol class="breadcrumb">
                <li><a asp-area="" asp-controller="home" asp-action="Index">Home</a></li>
                <li><a asp-area="" asp-controller="employee" asp-action="index">Employee Dashboard</a></li>
                <li><a asp-area="" asp-controller="employee" asp-action="orders">Orders</a></li>
                <li class="active">@ViewData["Title"]</li>
            </ol>
        </div>
        <div class="col-md-3">
            <i><h5 id="logged-in-as">Order #197</h5></i>
        </div>
    </div>

    <h2 class="text-center">@ViewData["Title"]</h2>
    <h4 class="text-center">Arrived: 10/30/2016 2:59 PM</h4>

    <form asp-controller="" asp-action="" method="post" class="form-horizontal" role="form">
        <div class="form-group row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="form-group row">
                    <div class="col-md-12 text-center">
                        <label class="control-label">Quantity Received</label>
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6 text-center">
                        <label class="control-label">Compound Weight</label>
                        <input class="form-control" />
                    </div>
                    <div class="col-md-6 text-center">
                        <label class="control-label">Compound Mass</label>
                        <input class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 text-center">
                        <label class="control-label">Compound Appearance</label>
                        <textarea class="form-control" rows="6"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12 text-center">
                        <label class="control-label">Maximum Tolerated Dose (Animal Only)</label>
                        <input class="form-control" />
                    </div>
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-primary text-center" style="width:100%;">Submit Compound Receipt</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-2"></div>
    </div>

</div>

