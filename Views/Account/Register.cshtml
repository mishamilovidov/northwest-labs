@model RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="jumbotron">
    <h2>@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
        <div class="form-group row">
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <b><span asp-validation-for="FirstName" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <b><span asp-validation-for="LastName" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <b><span asp-validation-for="Email" class="text-danger"></span></b>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <b><span asp-validation-for="Password" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <b><span asp-validation-for="ConfirmPassword" class="text-danger"></span></b>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-primary pull-right">Register</button>
                    </div>
                </div>
        </div>
    </form>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
